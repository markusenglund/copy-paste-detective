{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true
  },
  "include": ["/**/*"]
}
